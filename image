#Gerekli kütüphaneleri import ediyoruz. Kütüphaneleri kurmadıysanız pip install ... ile istediğiniz kütüphaneyi kurabilirsiniz.
import matplotlib 
import numpy as np
import matplotlib.pyplot as plt
import matplotlib.pyplot as plt

import skimage
from skimage import data
from skimage import exposure
from skimage import img_as_float

#Resmi import etme
from skimage import io #input-output
colony = io.imread("bonesu.jpeg")
print(type(colony))
print(colony.shape)

plt.figure(figsize=(24, 18))

# Gerçek görüntünün tüm kanallarını plot etme
plt.subplot(121)
plt.imshow(colony[:,:,:])
plt.title('3-channel image')
plt.axis('off')

# Yalnızca bir renk kanalı plot etme
plt.subplot(122)
plt.imshow(colony[:,:,0])
plt.title('1-channel image')
plt.axis('off');

#Kendi resmini yükleme ve bir değere atma
img = io.imread("bonesu.jpeg")
plt.imshow(img, 'gray')

# Contrast stretching ile process işlemi
p2, p98 = np.percentile(img, (2, 98))
img_rescale = exposure.rescale_intensity(img, in_range=(p2, p98))
plt.imshow(img_rescale, 'gray')


# Histogram equalization ile process işlemi
img_eq = exposure.equalize_hist(img)
plt.imshow(img_eq, 'gray')

# Adaptive Equalization ile process işlemi
img_adapteq = exposure.equalize_adapthist(img, clip_limit=0.03)
plt.imshow(img_adapteq, 'gray')
